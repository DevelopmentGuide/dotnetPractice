@model List<Product>

<table class="table contactForm">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)

        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id = product.Id
                }, new { @class = "btn btn-warning"})
                    |
                <td>
                        @Html.ActionLink("Delete", "Delete", new { id = product.Id
                }, new { @class = "btn btn-danger"})
                </td>
            </tr>

        }
    </tbody>
</table>
<div class="d-flex justify-content-end">
    @Html.ActionLink("Create", "Create", new object { }, new { @class = "btn btn-primary btn-lg"})
</div>