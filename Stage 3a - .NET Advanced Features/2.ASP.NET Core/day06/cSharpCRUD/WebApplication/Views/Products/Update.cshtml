@model Product


<form asp-action="Update" asp-controller="Products" method="post" class="contactForm">
    <div class="d-flex justify-content-end">
        @Html.ActionLink("Back", "Index", new object { }, new { @class = "btn btn-outline-primary btn-lg"})
    </div>
    <fieldset>
        <div>
            <label asp-for="Id"></label>
            <input asp-for="Id" readonly class="field" />
        </div>
        <div>
            <input placeholder="Name" asp-for="Name" class="field" />
        </div>
        <div>
            <input placeholder="Price" asp-for="Price" class="field" />
        </div>
        <div>
            <button type="submit" class="btn btn-warning">Update</button>
        </div>
    </fieldset>
</form>