@{
    ViewBag.Title = "Login";
}
@model User

<div class="container">
    <form asp-action="Login" class="border text-center contactForm">

        <div class="form-group row">
            <label asp-for="Email" style="text-align: left;"></label>
            <input asp-for="Email" />
        </div><br /><br />
        <div class="row">
            <span></span>
            <span>@Html.ValidationMessageFor(u => u.Email)</span>
        </div>

        <div class="form-group row">
            <label asp-for="Password" style="text-align: left;"></label>
            <input asp-for="Password" />
        </div>
        <div class="row">
            <span></span>
            <span>@Html.ValidationMessageFor(u => u.Password)</span>
        </div><br /><br />

        <button type="submit" class="btn btn-success">LOG IN</button><br /><br />

        <h6 style="color:red">@Html.Raw(@ViewBag.Message)</h6>
    </form>
</div>
